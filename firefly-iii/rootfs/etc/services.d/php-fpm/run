#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Firefly III
# Runs the PHP-FPM daemon
# ==============================================================================

declare currentversion
declare key
declare versionquery

key=$(cat /data/firefly/appkey.txt)
export APP_KEY=${key}
export LOG_CHANNEL=stdout
export APP_ENV=local
export DB_CONNECTION=mysql
export DB_DATABASE
export DB_HOST
export DB_PASSWORD
export DB_PORT
export DB_USERNAME
export FIREFLY_III_URI=http://localhost
export FIREFLY_III_ACCESS_TOKEN

if bashio::config.has_value 'remote_mysql_host';then
    DB_HOST=$(bashio::config "remote_mysql_host")
    DB_DATABASE=$(bashio::config "remote_mysql_database")
    DB_USERNAME=$(bashio::config "remote_mysql_username")
    DB_PASSWORD=$(bashio::config "remote_mysql_password")
    DB_PORT=$(bashio::config "remote_mysql_port")
else
    DB_HOST=$(bashio::services "mysql" "host")
    DB_DATABASE=firefly
    DB_USERNAME=$(bashio::services "mysql" "username")
    DB_PASSWORD=$(bashio::services "mysql" "password")
    DB_PORT=$(bashio::services "mysql" "port")
fi

if bashio::config.equals 'log_level' 'debug' \
    || bashio::config.equals 'log_level' 'trace' ;then
    export APP_DEBUG=true
    export APP_LOG_LEVEL=debug
fi

versionquery='SELECT data FROM configuration WHERE name="ff3_version"'
currentversion=$(mysql --host="${DB_HOST}" --database="${DB_DATABASE}"  \
    --user="${DB_USERNAME}" --execute="${versionquery}" \
    --password="${DB_PASSWORD}" -ss -f)
currentversion=$(sed -e 's/^"//' -e 's/"$//' <<<"$currentversion")

FIREFLY_III_ACCESS_TOKEN=$(bashio::config "api_token")

php /var/www/firefly/artisan package:discover > /dev/null 2>&1

if [ "$currentversion" != "$FIREFLY_VERSION" ]; then
    bashio::log.info "Current version of Firefly is ${currentversion}"
    bashio::log.info "Release version is  ${FIREFLY_VERSION}"
    bashio::log.info "Installing/updating Database"
    php /var/www/firefly/artisan migrate --seed
    php /var/www/firefly/artisan firefly:decrypt-all
    php /var/www/firefly/artisan firefly:upgrade-database
    php /var/www/firefly/artisan passport:install
fi

php /var/www/firefly/artisan cache:clear > /dev/null 2>&1
php /var/www/firefly/artisan config:cache > /dev/null 2>&1

php /var/www/csvimport/artisan package:discover > /dev/null 2>&1
php /var/www/csvimport/artisan cache:clear > /dev/null 2>&1
php /var/www/csvimport/artisan config:cache > /dev/null 2>&1

php /var/www/csvimport/artisan csv:version

bashio::log.info "Starting PHP-FPM..."

exec php-fpm7.3 --nodaemonize
